DVDIR = ../tools/dview
VPATH = $(DVDIR)
WEXLIB = ../wexuxwx3.a

CC = gcc
CXX = g++
CFLAGS = -g -I. -I../include `wx-config-3 --cflags`
CXXFLAGS=-std=c++11 $(CFLAGS)
OBJECTS  = dview.o
OBJCXXFLAGS=-stdlib=libc++ -std=c++11
LDFLAGS=-lfontconfig `wx-config-3 --libs` `wx-config-3 --libs aui` `wx-config-3 --libs stc` -lm -stdlib=libc++

TARGET = DView


$(TARGET): $(OBJECTS) $(WEXLIB) 
	$(CXX) -g $(CXXFLAGS) -o $@ $^ $(LDFLAGS)
	
clean:
	rm -f $(TARGET) $(OBJECTS)
	rm -rf DView.app
